<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FruitVendorMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>


    <header>
        <!-- Creating a navigation bar using the
         .navbar class of bootstrap -->
        <nav id="toggleUserNavBar" class="navbar navbar-expand-md bg-dark navbar-dark" style="color:blue;">
            <a class="navbar-brand" href="#" style="color:#44e912;">Fruit Basket</a>
            <ul class="navbar-nav">

                <li class="nav-item">
                    <a class="nav-link" href="/home/UserProfile">Account</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/home/UserIndex">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/home/UserCart">Your Cart</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/home/UserOrder">Your Order</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/home/UserFeedBack">Your Feedback</a>
                </li>

            </ul>

            <ul class="navbar-nav ml-auto">


                <li class="nav-item">
                    <a onclick="logout()" class="nav-link glyphicon glyphicon-log-out" style="font-size:20px ;color:#44e912 ; margin-top: 0px;" href="#">Logout</a>
                </li>
            </ul>
        </nav>

        <nav id="toggleAdminNavBar" class="navbar navbar-expand-md bg-dark navbar-dark" style="color:blue;">
            <a class="navbar-brand" href="#" style="color:#44e912;">Fruit Basket</a>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/home/UserProfile">Account</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/home/UserIndex">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/home/UserCart">Your Cart</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/home/UserOrder">Your Order</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/home/UserFeedBack">Your Feedback</a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a onclick="logout()" class="nav-link glyphicon glyphicon-log-out" style="font-size:20px ;color:#44e912 ; margin-top: 0px;" href="#">Logout</a>
                </li>
            </ul>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - FruitVendorMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script>
    function logout() {
        let userName = sessionStorage.getItem("userName");
        $('#userName').text(userName);
        alert('logout');
        sessionStorage.clear();
        window.location.href = "https://localhost:44350/";
    }
</script>