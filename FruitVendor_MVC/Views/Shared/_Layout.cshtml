<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FruitVendorMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/jquery-3.6.0.min.js"></script>

</head>
<body>
    <header>
        <nav id="toggleNavBar" class="navbar navbar-expand-md bg-dark navbar-dark">
            <a class="navbar-brand" href="#">Fruit Basket</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/home/UserProfile">Account</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/UserIndex">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/UserCart">Your Cart</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/UserOrder">Your Order</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/UserFeedBack">Your Feedback</a>
                    </li>
                    
                    <li class="nav-item">
                        <button style="float:right" class="nav-item">
                            <span class="glyphicon-log-out"></span> Log out
                        </button>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - FruitVendorMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
