<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FruitVendorMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/jquery-3.6.0.min.js"></script>

    <script src="~/js/Admin Scripts/navbar.js"></script>

    <style>
        .topnav a:hover {
            border-bottom: 3px solid red;
        }
        li a {
            font-family: cursive;
            font-size:small;
            font-weight:100;
          
           
        }
        .logo {
            font-family: cursive;
            color:greenyellow;
        }
    </style>
   
</head>
<body>


    <header>
        <!-- Creating a navigation bar using the
         .navbar class of bootstrap -->
        <nav  id="toggleNavBar" class="navbar navbar-expand-lg navbar-light"   style="background-color:darkcyan">
            <a class="navbar-brand" href="/home/homepage">
                <b class="logo">FruitBasket</b>
                <img src="/Images/apples (1).png" height="50" width="50" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                
            </div>
        </nav>
    </header>





    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - FruitVendorMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script>
    function logOut() {
        alert('Logging Out.......');
        sessionStorage.clear();
        window.location.href = "https://localhost:44350/";
    }
</script>